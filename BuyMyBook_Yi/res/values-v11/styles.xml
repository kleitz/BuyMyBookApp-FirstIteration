<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!-- API 11 theme customizations can go here. -->
        
    </style>

    	<!-- BmB Theme here -->
    	
    <style name="ThemeSelector" parent="android:Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:typeface">sans</item>
        <!-- <item name="android:background">@color/background_grey</item> -->
    </style>
    
    		<!-- stuff for the action bar -->
    <style name="ActionBar" parent="android:style/Widget.Holo.ActionBar">     
        <item name="android:background">@color/title_background</item>
        <item name="android:titleTextStyle">@style/ActionBar.Text</item>
         <item name="android:icon">@drawable/ic_action_defaulticon</item>
    </style>
    
    <style name="ActionBar.Text"  parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/actionbar_grey</item>
        <item name="android:textSize">32sp</item>
    </style>
    
</resources>
